{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc-10 build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-std=c++17",
                "-stdlib=libc++",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}